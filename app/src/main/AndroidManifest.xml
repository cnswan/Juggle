<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cnswan.juggle">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".aapp.MApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/rx_android_title"/>
        <activity
            android:name=".activity.FlexBoxActivity"
            android:label="@string/rx_android_title"/>
        <activity
            android:name=".activity.RxAndroidActivity"
            android:label="@string/rx_android_title"/>
        <activity
            android:name=".activity.TinkerActivity"
            android:label="@string/tinker_title"/>

        <service android:name=".service.SampleResultService"/>
    </application>

</manifest>